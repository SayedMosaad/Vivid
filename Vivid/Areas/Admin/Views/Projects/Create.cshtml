@model Vivid.Areas.Admin.ViewModels.CreateProjectViewModel

@{
    ViewData["Title"] = "Add Project";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mt-2">
    <div class="card-header">
        <h3>Adding New Project</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverFile" class="control-label"></label>
                <input type="file" asp-for="CoverFile" class="form-control" />
                <span asp-validation-for="CoverFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photographer" class="control-label"></label>
                <input asp-for="Photographer" class="form-control" />
                <span asp-validation-for="Photographer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date"  asp-for="Date" class="form-control" value="" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team" class="control-label"></label>
                <input asp-for="Team" class="form-control" />
                <span asp-validation-for="Team" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concepts" class="control-label"></label>
                <input asp-for="Concepts" class="form-control" />
                <span asp-validation-for="Concepts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConceptFile" class="control-label"></label>
                <input type="file" asp-for="ConceptFile" class="form-control" />
                <span asp-validation-for="ConceptFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planning" class="control-label"></label>
                <input asp-for="Planning" class="form-control" />
                <span asp-validation-for="Planning" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanningFile" class="control-label"></label>
                <input type="file" asp-for="PlanningFile" class="form-control" />
                <span asp-validation-for="PlanningFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Realizatiion" class="control-label"></label>
                <input asp-for="Realizatiion" class="form-control" />
                <span asp-validation-for="Realizatiion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealizationFile" class="control-label"></label>
                <input type="file" asp-for="RealizationFile" class="form-control" />
                <span asp-validation-for="RealizationFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"ID","Name"))" ></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Project" class="btn btn-success" />
                <a asp-action="index" class="btn btn-danger">Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
<partial name="_Validation" />
}