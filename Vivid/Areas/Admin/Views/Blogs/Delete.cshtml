@model Vivid.Areas.Admin.Models.Blog

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h3 >Are you sure you want to delete this?</h3>

<article>
    <div class="card mt-2">
        <div class="card-header">
            <h3 class="card-title">@Model.Title</h3>
        </div>
        <div class="card-body d-flex">
            <div class="col-7">
                @Model.Body
            </div>
            <div class="col-5">
                <img src="~/images/blogs/@Model.Image" alt="@Model.Title" width="400" height="400" class="rounded" />
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-area="Admin" asp-controller="blogs" asp-action="index" class="btn btn-success">Back</a>
            </form>

        </div>
    </div>
</article>    