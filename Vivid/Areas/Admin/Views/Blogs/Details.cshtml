@model Vivid.Areas.Admin.Models.Blog

@{
    ViewData["Title"] = "Blog Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<article>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Model.Title</h3>
        </div>
        <div class="card-body d-flex">
            <div class=" col-md-7 col-sm-6">
                @Model.Body
            </div>
            <div class="col-md-5 col-sm-6">
                <img src="~/images/blogs/@Model.Image" alt="@Model.Title" width="400" height="400" class="rounded" />
            </div>
        </div>
        <div class="card-footer">
            <a asp-area="Admin" asp-controller="blogs" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success">Edit</a>
            <a asp-area="Admin" asp-controller="blogs" asp-action="index" class="btn btn-primary">Back</a>
        </div>
    </div>
</article>