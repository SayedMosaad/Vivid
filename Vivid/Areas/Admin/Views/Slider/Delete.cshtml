@model Vivid.Areas.Admin.Models.Slider

@{
    ViewData["Title"] = "Delete Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mt-2">
    <div class="card-header">
        <h2>Are you sure you want to delete this slider?</h2>
    </div>
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <img src="~/images/slider/@Model.Photo" class="rounded" width="400" height="400" />
    </div>
    <div class="ml-2">
        <form asp-area="Admin" asp-controller="slider" asp-action="ConfirmDelete" method="post">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-controller="slider" asp-area="Admin" asp-action="Index" class="btn btn-primary">Cancel</a>
        </form>
    </div>

</div>