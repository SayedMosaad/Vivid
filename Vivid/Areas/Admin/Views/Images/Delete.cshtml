@model Vivid.Areas.Admin.Models.Photo

@{
    ViewData["Title"] = "Delete Project Image";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class=" card-title">Are you sure you want to delete this Photo?</h3>
    </div>
    <h4 class="card-text m-2">
        Project: @Model.Project.Name
    </h4>
    <div class="card-body">
        <div class="card-img text-center mt-2">
            <img src="~/images/project/@Model.Image" class="img-thumbnail rounded" style="height:300px; width:350px;" />
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </form>
    </div>
</div>
