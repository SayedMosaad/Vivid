@model Vivid.Areas.Admin.Models.Career

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-2 link">
    <a asp-controller="careers" asp-action="index">Careers </a> /
</div>

<div class="card mt-2">
    <div class="card-header">
           <h4>Are you sure you want to delete this job?</h4>
    </div>
    <div class="card-body">
        <div>
            <h3>@Model.Title</h3>
            <h6>@Model.Location</h6>
        </div>
        <div>
            <strong>Specification: </strong>
            <p class="card-text">@Model.Specification</p>
        </div>
        <br />
        <div>
            <strong>Responsibilities: </strong>
            <p class="card-text">@Model.Responsibilities</p>
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </form>
    </div>
</div>



