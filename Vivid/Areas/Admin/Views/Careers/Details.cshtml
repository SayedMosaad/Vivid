@model Vivid.Areas.Admin.Models.Career

@{
    ViewData["Title"] = "Job Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-2 link">
    <a asp-controller="careers" asp-action="index">Careers </a> /
</div>

<div class="card mt-2">
    <div class="card-header">
        <div class="float-left">
            <h3>@Model.Title</h3>
            <h6>@Model.Location</h6>
        </div>
        <div class="float-right">
            <a asp-controller="careers"  asp-action="Edit" asp-route-id="@Model.ID" class="fas fa-edit"></a>
            <a asp-controller="careers" asp-action="Delete" asp-route-id="@Model.ID" class="fas fa-trash text-danger"></a>
        </div>
    </div>
    <div class="card-body">
        <div>
            <strong>Specification: </strong>
            <p class="card-text">@Model.Specification</p>
        </div>
        <br />
        <div>
            <strong>Responsibilities: </strong>
            <p class="card-text">@Model.Responsibilities</p>
        </div>
    </div>
</div>

