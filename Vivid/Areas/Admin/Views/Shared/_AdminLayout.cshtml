                </li>
            }

            @if (controller == "Projects")
            {
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Projects" asp-action="index">
                        <i class="fas fa-grip-horizontal"></i>
                        <span>Projects</span>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Projects" asp-action="index">
                        <i class="fas fa-grip-horizontal"></i>
                        <span>Projects</span>
                    </a>
                </li>
            }

            @if (controller == "Images")
            {
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="images" asp-action="index">
