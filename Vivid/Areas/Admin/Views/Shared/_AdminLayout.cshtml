                </li>
            }

            @if (controller == "Media")
            {
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Media" asp-action="index">
                        <i class="fas fa-play-circle"></i>
                        <span>Media</span>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Media" asp-action="index">
                        <i class="fas fa-play-circle"></i>
                        <span>Media</span>
                    </a>
                </li>
