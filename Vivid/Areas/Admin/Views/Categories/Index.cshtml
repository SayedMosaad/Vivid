@model IEnumerable<Vivid.Areas.Admin.Models.Category>

@{
    ViewData["Title"] = "Project Categories";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-outline-info">Add New Category</a>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>@Html.DisplayNameFor(m=>m.Image)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                            @*<hr />*@
                            @*@foreach (var subitem in item.Projects)
                            {
                                <h5>@subitem.Name</h5>
                            }*@
                        </td>
                        <td>
                            <img src="~/images/categories/@item.Image" style="width:150px; height:150px;" />
                        </td>

                        <td>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.ID" asp-route-ImageUrl="@item.Image" class="fas fa-edit text-primary"></a>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.ID" class="fas fa-trash text-danger"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


