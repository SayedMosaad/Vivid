@model Vivid.Areas.Admin.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <title>Admin Login</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-iconpicker/css/all.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/lib/style.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid'">
        <div class="row">
            <div class="col-lg-8 col-sm-6 offset-2 mt-5">
                <div class="card">
                    <div class="card-header text-center">
                        <h3 class="card-title">Admin Login</h3>

                    </div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Login">
                            <div class="form-group">
                                <label asp-for="UserName" class="col-form-label"></label>
                                <input type="text" asp-for="UserName" class="fadeIn first form-control" placeholder="UserName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="col-form-label"></label>
                                <input type="password" asp-for="Password" class="fadeIn first form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-primary fadeIn fourth" value="Login">
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>